<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gionee.www.pedometer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.StepActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.StepService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.GuardStepService"
            android:enabled="true"
            android:exported="true"
            android:process=":guard" />

        <activity android:name=".view.SettingActivity"></activity>

        <receiver android:name=".service.ClearDataReceiver">
            <intent-filter>
                <action android:name="com.gionee.www.pedometer.cleardata"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
